<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FEFDFC"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F53D62"
            android:padding="32dp"
            >

            <ImageView
                android:id="@+id/arrow_back"
                android:layout_width="14dp"
                android:layout_height="9dp"
                android:src="@drawable/ic_arrow_white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Edit Profile"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignBaseline="@id/arrow_back"/>

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_img"
                android:layout_below="@id/title_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"

                />

            <TextView
                android:id="@+id/title_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Change your profile photo"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@id/user_img"
                android:layout_marginTop="16dp"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/profile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="14sp"
                    android:textColor="#ABB1C0"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="20dp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:outlineSpotShadowColor="#353333"
                    android:elevation="5dp"
                    >

                    <ImageView
                        android:id="@+id/user_img_small"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_img"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lance Bogrol"
                        android:textColor="#686E7F"
                        android:textSize="12sp"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/user_img_small"
                        android:layout_centerVertical="true"

                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:outlineSpotShadowColor="#353333"
                    android:elevation="5dp"
                    >

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="12dp"
                        android:layout_height="14dp"
                        android:background="@drawable/ic_user"
                        android:layout_centerVertical="true"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lancebogrol"
                        android:textColor="#686E7F"
                        android:textSize="12sp"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/user_icon"
                        android:layout_centerVertical="true"

                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:outlineSpotShadowColor="#353333"
                    android:elevation="5dp"
                    >

                    <ImageView
                        android:id="@+id/domain_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_domain"
                        android:layout_centerVertical="true"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="http://yourdomain.com/"
                        android:textColor="#686E7F"
                        android:textSize="12sp"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/domain_icon"
                        android:layout_centerVertical="true"

                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:outlineSpotShadowColor="#353333"
                    android:elevation="5dp"
                    >

                    <ImageView
                        android:id="@+id/bio_icon"
                        android:layout_width="12dp"
                        android:layout_height="14dp"
                        android:background="@drawable/ic_bio"
                        android:layout_centerVertical="true"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phasellus fermentum congue imperdiet."
                        android:textColor="#686E7F"
                        android:textSize="12sp"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/bio_icon"
                        android:layout_centerVertical="true"

                        />

                </RelativeLayout>




                <TextView
                    android:id="@+id/contact_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classified Information"
                    android:textSize="14sp"
                    android:textColor="#ABB1C0"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="20dp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:outlineSpotShadowColor="#353333"
                    android:elevation="5dp"
                    >

                    <ImageView
                        android:id="@+id/mail_icom"
                        android:layout_width="12dp"
                        android:layout_height="9dp"
                        android:background="@drawable/ic_mail"
                        android:layout_centerVertical="true"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name@yourdomain.com"
                        android:textColor="#686E7F"
                        android:textSize="12sp"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/mail_icom"
                        android:layout_centerVertical="true"

                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:outlineSpotShadowColor="#353333"
                    android:elevation="5dp"
                    >

                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/ic_phone"
                        android:layout_centerVertical="true"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 4567890"
                        android:textColor="#686E7F"
                        android:textSize="12sp"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/phone_icon"
                        android:layout_centerVertical="true"

                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:outlineSpotShadowColor="#353333"
                    android:elevation="5dp"
                    >

                    <ImageView
                        android:id="@+id/gender_icon"
                        android:layout_width="13dp"
                        android:layout_height="11dp"
                        android:background="@drawable/ic_gender"
                        android:layout_centerVertical="true"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="#686E7F"
                        android:textSize="12sp"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/gender_icon"
                        android:layout_centerVertical="true"

                        />

                </RelativeLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg"
                    android:layout_margin="32dp"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />


            </LinearLayout>


        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>